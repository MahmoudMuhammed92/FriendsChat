<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sahil.friendschat.MainActivity"
    android:background="@drawable/login_background">


    <ImageView
        android:backgroundTint="@android:color/white"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview"
        android:src="@drawable/logo1"/>

    <LinearLayout
        android:padding="25dp"
        android:layout_below="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_login"
        android:orientation="vertical">



            <EditText
                android:textColor="@android:color/white"
                android:layout_marginTop="25dp"
                android:drawableTint="@android:color/white"
                android:drawablePadding="18dp"
                android:drawableLeft="@drawable/ic_user_login_24dp"
                android:textColorHint="@android:color/white"
                android:background="#D81B60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_edit_login"
                android:hint="Username"
                android:padding="10dp"/>





            <EditText
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:textColorHint="@android:color/white"
                android:drawableTint="@android:color/white"
                android:drawablePadding="18dp"
                android:drawableLeft="@drawable/ic_lock_outline_24dp"
                android:background="#D81B60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_edit_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="7dp"/>


    </LinearLayout>

    <LinearLayout
        android:padding="15dp"
        android:weightSum="2"
        android:layout_below="@id/group_login"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:layout_marginTop="5dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:background="#CE93D8"
            android:id="@+id/main_btn_login"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
            android:padding="8dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/white"
            android:layout_margin="4dp"/>

            <ImageButton
                android:padding="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                android:layout_margin="4dp"/>

            <ImageButton
                android:padding="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_google_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_edt_signup"
            android:textColor="@android:color/white"
            android:text="Dont't have an account ? SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</RelativeLayout>
